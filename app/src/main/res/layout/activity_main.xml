<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/relate_toolbar"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#32a3dc"
                    app:navigationIcon="@drawable/back"
                    app:title=" "
                    app:titleTextColor="@color/white" />

                <TextView
                    android:id="@+id/txt_name_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="70dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </RelativeLayout>
            <FrameLayout
                android:layout_below="@id/relate_toolbar"
                android:layout_width="match_parent"
                android:id="@+id/frame_Layout"
                android:layout_above="@id/bottomnavi"
                android:layout_height="match_parent">

            </FrameLayout>
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomnavi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#234C75"
                app:itemTextColor="@color/white"
                app:menu="@menu/menu" />

        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start">

            <ExpandableListView
                android:groupIndicator="@null"
                android:id="@+id/elvMobiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ExpandableListView>

        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>
</RelativeLayout>